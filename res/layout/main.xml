<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.testing.MainActivity" >

    <TextView
        android:id="@+id/textViewM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Rate!"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/road"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textViewM"
        android:hint="Road ID"
        android:textColor="#000000"
        android:textSize="15dp" />
    
    <TextView
			android:layout_width="fill_parent"
			android:layout_height="56dp"
			android:id="@+id/roadText"
			android:textColor="#000000"
			android:text="Road ID"
			android:layout_below="@+id/textViewM"
			android:layout_alignParentLeft="true"/>
    
    <EditText
        android:id="@+id/rate"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/road"
        android:hint="Score"
        android:textColor="#000000"
        android:textSize="15dp" />
    
    <TextView
			android:layout_width="fill_parent"
			android:layout_height="56dp"
			android:id="@+id/rateText"
			android:textColor="#000000"
			android:text="Score"
			android:layout_below="@+id/roadText"
			android:layout_alignParentLeft="true"/>
    
    <Button 
        	android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:text="Submit!"
			android:id="@+id/submit"
			android:layout_below="@+id/rate"
			android:layout_centerHorizontal="true"
			android:textSize="13dp"
			android:textColor="#000000"/>
    <TextView
			android:layout_width="fill_parent"
			android:layout_height="56dp"
			android:id="@+id/successMssg"
			android:textColor="#000000"
			android:layout_below="@+id/submit"
			android:layout_centerHorizontal="true"/>
</RelativeLayout>